@model redeSocial.Models.Usuario


<input type="text" id="alertOnFailedLogin" value="@ViewBag.Message" hidden>


<form asp-action="Login" class="w-25">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="nomeUsuario" class="control-label"></label>
        <input asp-for="nomeUsuario" class="form-control" />
        <span asp-validation-for="nomeUsuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="senha" class="control-label"></label>
        <input asp-for="senha" type="password" class="form-control" />
        <span asp-validation-for="senha" class="text-danger"></span>
    </div>
    <div class="padding-vertical"></div>
    <div class="d-flex">
        <input type="submit" value="Login" class="btn btn-primary" onclick="loginTrial()"/>
        <div class="padding-horizontal"></div>
        <a asp-action="Create" class="btn btn-secondary">Criar conta</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}