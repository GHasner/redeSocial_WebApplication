@model IEnumerable<redeSocial.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.visible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.post.postID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuario.usuarioID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.visible)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.comentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.comentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.comentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
